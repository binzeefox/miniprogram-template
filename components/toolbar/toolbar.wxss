/* components/toolbar/toolbar.wxss */

/*主容器*/
.toolbar-container{
    width: 100%;
    height: fit-content;
    /*padding-bottom: 30rpx;*/
    /*border:0rpx solid #f1f1f1;*/
    display: flex;
    background: var(--colorMainBackground);
    flex-direction: column;
    z-index: 99;
}

/*标题*/
.title-text{
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size:var(--titleFontSize);
    line-height:var(--titleFontSize);
    color: var(--colorTextTitle);
    font-family:PingFangSC-Medium;
    font-weight:var(--textBold);
}

/*工具栏*/
.tool-container{
    width: 100%;
    height: fit-content;
    align-items: center;
    /*margin-top: 28rpx;*/
    display: flex;
    flex-direction: row;
    margin-bottom: 20rpx;
}

/*地理按钮*/
.button-container{
    width: 30%;
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

/*地理图标*/
.location-icon{
    width: 32rpx;
    height: 36rpx;
    margin-left: 38rpx;
    background-image: var(--iconLocationSvg);
    background-size: cover;
}

/*返回图标*/
.back-icon, .back-icon-reverse{
    width: 20rpx;
    height: 36rpx;
    background-image: var(--iconBackSvg);
    background-size: cover;
}

.back-icon-reverse{
    background-image: var(--iconBackReverseSvg);
}

/*地理文字*/
.location-text{
    font-size:34rpx;
    margin-left: 14rpx;
    font-family:PingFangSC-Medium;
    font-weight:500;
    color: #666666;
    line-height:48rpx;
}

/*返回按钮*/
.home-as-up-button{
    position: fixed;
    z-index: 1;
    left: 40rpx;
    top: 64rpx;
    height: 60rpx;
    width: 60rpx;

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

/*搜索框*/
.search-container{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 64rpx;
    margin-left: 20rpx;
    margin-right: 40rpx;
    background: #f9f9f9;
    border-radius:32rpx;
    align-items: center;
}

/*搜索框提示文字*/
.search-hint{
    margin-left: 18rpx;
    font-size:26rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color: #888888;
    line-height:32rpx;
    background-clip:text;
}