/**app.wxss**/
@import "./assets/resource/wxss/color.wxss";
@import "./assets/resource/wxss/size.wxss";
/*@import "assets/image/svg/icon_svg.wxss";*/  /*svg 文件可以在此导入*/

page{
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /*justify-content: space-between;*/
  box-sizing: border-box;
  background: var(--colorBasicBackground);  /*使用全局背景色*/
}

/*分割线*/
.divider {
  width: 100%;
  height: 1px;
  background: var(--colorDivider);
}

/*隐藏滚动条*/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
